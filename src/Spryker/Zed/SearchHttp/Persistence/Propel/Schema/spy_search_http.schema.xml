<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\SearchHttp\Persistence" package="src.Orm.Zed.SearchHttp.Persistence">

    <table name="spy_search_http_config" identifierQuoting="true">
        <column name="id_search_http_config" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <id-method-parameter value="spy_search_http_config_pk_seq"/>
        <column name="store_name" type="VARCHAR" size="255"/>

        <unique name="spy_search_http_config-store_name_unique">
            <unique-column name="store_name"/>
        </unique>

        <behavior name="synchronization">
            <parameter name="resource" value="search_http_config"/>
            <parameter name="key_suffix_column" value="store_name"/>
            <parameter name="queue_group" value="sync.http.search.config"/>
        </behavior>

        <behavior name="timestampable"/>
    </table>

</database>
